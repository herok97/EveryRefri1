<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EveryRefri" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- 타이틀 바 없애는 코드 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_yellow</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RedButton">
        <item name="android:background">@drawable/round_rectangle_red</item>
    </style>
    <style name="bt_red">
        <item name="android:buttonStyle">@style/RedButton</item>
    </style>
    <style name="Red.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/color_red</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>