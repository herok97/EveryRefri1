<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/white_blue"
    tools:context=".activity_15_post">

    <TextView
        android:id="@+id/tv_post"
        style="@style/title_blue"
        android:text="게시물"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibt_back15"
        style="@style/bt_back_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibt_alarm15"
        style="@style/bt_alarm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="405dp"
        android:layout_height="651dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibt_back15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_title15"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:text="제목"
                android:textColor="#3F51B5"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="111dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_pro15"
                    android:layout_width="102dp"
                    android:layout_height="79dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

                <LinearLayout
                    android:layout_width="318dp"
                    android:layout_height="82dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="ID"
                        android:textColor="#2196F3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/ibt_chat15"
                            android:layout_width="55dp"
                            android:layout_height="54dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/circle_blue"
                            app:srcCompat="@android:drawable/sym_action_chat" />

                        <Button
                            android:id="@+id/bt_ask"
                            android:layout_width="53dp"
                            android:layout_height="53dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/circle_whiteblue"
                            android:text="나눔요청"
                            android:textSize="10sp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="209dp"
                android:orientation="vertical"
                android:background="@drawable/round_rectangle_vi"
                >

                <TextView
                    android:id="@+id/tv_need"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="※필수기재사항"
                    android:textAlignment="textStart"
                    android:textColor="#222F77"
                    android:textSize="18sp"
                    tools:ignore="RtlCompat" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_category15"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1. 카테고리"
                            android:textColor="#222F77" />

                        <TextView
                            android:id="@+id/tv_cate"
                            android:layout_width="467dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="TextView"
                            android:textColor="#222F77" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_buy15"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="2. 구입일시"
                                android:textColor="#222F77" />

                            <TextView
                                android:id="@+id/tv_buydate"
                                android:layout_width="588dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="TextView"
                                android:textColor="#222F77" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_exp15"
                                android:layout_width="339dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="3. 유통기한"
                                android:textColor="#222F77" />

                            <TextView
                                android:id="@+id/tv_expdate"
                                android:layout_width="566dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="TextView"
                                android:textColor="#222F77" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_storage15"
                                android:layout_width="339dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="4. 보관방법"
                                android:textColor="#222F77" />

                            <TextView
                                android:id="@+id/tv_storagemethod"
                                android:layout_width="566dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="TextView"
                                android:textColor="#222F77" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_add15"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:text="추가설명" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>